{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "es2015",
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}